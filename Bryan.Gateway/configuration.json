{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/base/{url}", //下游路由模板，真实请求的路径
      "DownstreamScheme": "http", //请求的方式，例如：http,https
      "UpstreamPathTemplate": "/base/{url}", //上游地址配置
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ], //上游支持的请求类型
      "ServiceName": "base", //服务器名称
      //负载均衡：
      //RoundRobin轮流发送;
      //LeastConnection C 将请求发往最空闲的那个服务器
      //NoLoadBalance C 总是发往第一个请求或者是服务发现
      "LoadBalancerOptions": "LeastConnection",
      "UseServiceDiscovery": true //启用consul服务
    },
    {
      "DownstreamPathTemplate": "/hfgoods/{url}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/hfgoods/{url}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ],
      "ServiceName": "hfgoods",
      "LoadBalancerOptions": "LeastConnection",
      "UseServiceDiscovery": true
    },
    {
      "DownstreamPathTemplate": "/base/swagger.json",
      "DownstreamScheme": "http",
      "ServiceName": "base",
      "LoadBalancer": "LeastConnection",
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/base/swagger.json",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/hfgoods/swagger.json",
      "DownstreamScheme": "http",
      "ServiceName": "hfgoods",
      "LoadBalancer": "LeastConnection",
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/hfgoods/swagger.json",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "PUT" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "localhost:5009",
    //consul服务器地址和ip
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": "8500"
    }
  }
}
