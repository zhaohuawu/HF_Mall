{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/base/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5010
        }
      ],
      "UpstreamPathTemplate": "/base/{url}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ]
    },
    {
      "DownstreamPathTemplate": "/hfgoods/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5011
        }
      ],
      "UpstreamPathTemplate": "/hfgoods/{url}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ]
    },
    {
      "DownstreamPathTemplate": "/base/swagger.json",
      "DownstreamScheme": "http",
      "ServiceName": "userapi",
      "LoadBalancer": "RoundRobin",
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/base/swagger.json",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/hfgoods/swagger.json",
      "DownstreamScheme": "http",
      "ServiceName": "basedataapi",
      "LoadBalancer": "RoundRobin",
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/hfgoods/swagger.json",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "PUT" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "localhost:5009",
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": "8500"
    }
  }
}

